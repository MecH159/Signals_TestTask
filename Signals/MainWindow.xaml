<Window x:Class="Signals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Сигналы" Height="500" Width="1050" ResizeMode="NoResize">
    <Grid>

        <lvc:CartesianChart Name="SignalChart" LegendLocation="Right" HorizontalAlignment="Left" Width="738">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="Сигнал" Values="{Binding SignalValues}" 
                              PointGeometry="{x:Null}" StrokeThickness="2"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Время, сек"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Амплитуда"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <ComboBox x:Name="cmbSignalType" SelectedIndex="0" Margin="744,47,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="217">
            <ComboBoxItem Content="Синус"/>
            <ComboBoxItem Content="Меандр"/>
            <ComboBoxItem Content="Пилообразный"/>
            <ComboBoxItem Content="Треугольный"/>
        </ComboBox>
        <TextBox x:Name="txtAmplitude" Text="10" Margin="744,105,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" />
        <TextBox x:Name="txtFrequency" Text="10" Margin="855,105,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="107"/>
        <TextBox x:Name="txtPointsCount" Text="100" Margin="744,159,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98"/>

        <Button x:Name="btnGenerate" Content="Сгенерировать" 
                        Click="btnGenerate_Click" Margin="721,0,0,17" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120"/>
        <Label Content="Тип сигнала" HorizontalAlignment="Left" Margin="743,16,0,0" VerticalAlignment="Top"/>
        <Label Content="Амплитуда" HorizontalAlignment="Left" Margin="744,74,0,0" VerticalAlignment="Top"/>
        <Label Content="Частота" HorizontalAlignment="Left" Margin="855,74,0,0" VerticalAlignment="Top"/>
        <Label Content="Количество точек" HorizontalAlignment="Left" Margin="743,128,0,0" VerticalAlignment="Top"/>
        <Label Content="Максимальное значение сигнала:" HorizontalAlignment="Left" Margin="744,186,0,0" VerticalAlignment="Top"/>
        <Label x:Name="txtMaxValue" Content="" HorizontalAlignment="Left" Margin="755,217,0,0" VerticalAlignment="Top"/>
        <Label Content="Минимальное значение сигнала:" HorizontalAlignment="Left" Margin="744,248,0,0" VerticalAlignment="Top"/>
        <Label x:Name="txtMinValue" Content="" HorizontalAlignment="Left" Margin="755,279,0,0" VerticalAlignment="Top"/>
        <Label Content="Среднее значение сигнала" HorizontalAlignment="Left" Margin="744,308,0,0" VerticalAlignment="Top"/>
        <Label x:Name="txtSumValue" Content="" HorizontalAlignment="Left" Margin="755,339,0,0" VerticalAlignment="Top"/>
        <Label Content="Количество пересечений нулевой линии" HorizontalAlignment="Left" Margin="744,358,0,0" VerticalAlignment="Top"/>
        <Label x:Name="txtZeroCount" Content="" HorizontalAlignment="Left" Margin="755,389,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Сохранить график" Margin="870,0,0,17" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120" Click="btnSave_Click" IsEnabled="False"/>


    </Grid>

</Window>
